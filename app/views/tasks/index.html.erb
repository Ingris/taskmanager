<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| #@tasks.timestamps%>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.user.name + " " + task.user.lastname %></td>
    <td><%= if task.state=="1"
              "Terminado"
            else
              "No Terminado"
            end
        %></td>

    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

